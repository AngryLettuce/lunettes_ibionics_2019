<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:opencv="http://schemas.android.com/apk/res-auto">



    <org.opencv.android.JavaCameraView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="gone"
        android:id="@+id/show_camera_activity_java_surface_view2_back"
        opencv:show_fps="true"
        opencv:camera_id="back" />
    <Switch
        android:id="@+id/switch_HoughCircle_back"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:text="Enable Pupil Detect HC"
        android:textColor="#0009ff"
        android:translationY="20dp" />

    <Switch
        android:id="@+id/switch_EllipsFitting_back"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:text="Enable Pupil Detect EF"
        android:textColor="#0009ff"
        android:translationY="80dp" />

    <Switch
        android:id="@+id/threhold_inv_back"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:text="Intermediate step"
        android:textColor="#0009ff"
        android:translationY="140dp" />


    <SeekBar
        android:id="@+id/seekBarZoomid3_back"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="50dp"
        android:max="220"

        android:min="0"/>

    <SeekBar
        android:id="@+id/ellipseThreshold_back"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="50dp"
        android:max="255"
        android:progress="15"
        android:translationY="-50dp"
        android:min="1"/>

    <!--
    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="200dp"
        android:layout_height="50dp"
        opencv:srcCompat="@drawable/logo"
        android:translationY="-50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:alpha="0.5"/>
    -->
    <ImageButton
        android:id="@+id/switch_activity2_back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:background="@null"
        android:translationY="200dp"
        opencv:srcCompat="@android:drawable/ic_menu_set_as" />


</RelativeLayout>